{% extends 'base.html.twig' %}

{% block title %}Cause{% endblock %}

{% block body %}
    <h1>Cause</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cause.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ cause.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ cause.subtitle }}</td>
            </tr>
            <tr>
                <th>Excerpt</th>
                <td>{{ cause.excerpt }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ cause.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cause.description }}</td>
            </tr>
            <tr>
                <th>DateStart</th>
                <td>{{ cause.dateStart ? cause.dateStart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateEnd</th>
                <td>{{ cause.dateEnd ? cause.dateEnd|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cause_index') }}">back to list</a>

    <a href="{{ path('cause_edit', {'id': cause.id}) }}">edit</a>

    {{ include('cause/_delete_form.html.twig') }}
{% endblock %}
