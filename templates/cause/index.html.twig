{% extends 'pages/admin-temp.html.twig' %}


{% block title %}Cause index{% endblock %}
{% block admintitle %}Causes Index{% endblock %}
{% block adminsubtitle %}Add, view and edit information about current causes.{% endblock %}

{% block admin %}

    <div class="row">
        <a class="btn btn-outline-primary mx-3" href="{{ path('cause_new') }}">Create new</a>
{#        <a class="btn btn-outline-secondary mx-3" href="{{ path('admin') }}">Back to admin panel</a>#}
    </div>
    <br>

    <table class="table table-striped table-hover">
        <thead class="thead-light">
        <tr>
            <th></th>
            <th></th>
            <th>Id</th>
            <th>Title and Subtitle</th>
            <th>Start and End Dates</th>
        </tr>
        </thead>
        <tbody>
        {% for cause in causes %}
            <tr>
                <th scope="row">
                    <a class="btn btn-outline-secondary btn-sm btn-block"
                       href="{{ path('cause_show', {'id': cause.id}) }}">show</a>
                    <a class="btn btn-outline-danger btn-sm btn-block"
                       href="{{ path('cause_edit', {'id': cause.id}) }}">edit</a>
                </th>
                <td><img src="{{ cause.image }}" alt="none" class="" height="60" width="60"></td>
                <td>{{ cause.id }}</td>
                <td>{{ cause.title }}<br><small>{{ cause.subtitle }}</small></td>
                <td>{{ cause.dateStart ? cause.dateStart|date('Y-m-d') : '' }}
                    <br>{{ cause.dateEnd ? cause.dateEnd|date('Y-m-d') : '' }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <a class="btn btn-outline-primary mx-3" href="{{ path('cause_new') }}">Create new</a>
{#        <a class="btn btn-outline-secondary mx-3" href="{{ path('admin') }}">Back to admin panel</a>#}
    </div>
{% endblock %}
