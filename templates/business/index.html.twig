{% extends 'base.html.twig' %}

{% block title %}Business index{% endblock %}

{% block body %}
    <h1>Business index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Branch</th>
                <th>NrEmployees</th>
                <th>StrNameNr</th>
                <th>City</th>
                <th>Zipcode</th>
                <th>Country</th>
                <th>EMail</th>
                <th>Webpage</th>
                <th>TelNr</th>
                <th>Logo</th>
                <th>Image</th>
                <th>Description</th>
                <th>Moto</th>
                <th>actions</th>
                <th>gmap</th>
            </tr>
        </thead>
        <tbody>
        {% for business in businesses %}
            <tr>
                <td>{{ business.id }}</td>
                <td>{{ business.name }}</td>
                <td>{{ business.branch }}</td>
                <td>{{ business.nrEmployees }}</td>
                <td>{{ business.strNameNr }}</td>
                <td>{{ business.city }}</td>
                <td>{{ business.zipcode }}</td>
                <td>{{ business.country }}</td>
                <td>{{ business.eMail }}</td>
                <td>{{ business.webpage }}</td>
                <td>{{ business.telNr }}</td>
                <td>{{ business.logo }}</td>
                <td>{{ business.image }}</td>
                <td>{{ business.description }}</td>
                <td>{{ business.moto }}</td>
                <td>
                    <iframe src="{{ business.gmaploc }}"  width="300" height="150" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe></td>
                <td>
                    <a href="{{ path('business_show', {'id': business.id}) }}">show</a>
                    <a href="{{ path('business_edit', {'id': business.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('business_new') }}">Create new</a><br>
    <a href="{{ path('admin') }}">Back to admin panel</a>
{% endblock %}
