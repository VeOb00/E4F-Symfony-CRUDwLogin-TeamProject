{{ form_start(form) }}

<div class="form-group border px-4 pt-4 pb-1 mb-5 bg-light">
    <div class="form-row">
        <div class="form-group col">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_help(form.name) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            {{ form_label(form.branch) }}
            {{ form_widget(form.branch) }}
            {{ form_help(form.branch) }}
        </div>
        <div class="form-group col-3">
            {{ form_label(form.nrEmployees) }}
            {{ form_widget(form.nrEmployees) }}
            {{ form_help(form.nrEmployees) }}
        </div>
    </div>
</div>

<div class="form-row mb-4">
    <div class="form-group col">
        {{ form_label(form.logo) }}
        {{ form_widget(form.logo) }}
        {{ form_help(form.logo) }}
    </div>
    <div class="form-group col">
        {{ form_label(form.image) }}
        {{ form_widget(form.image) }}
        {{ form_help(form.image) }}
    </div>
</div>

<label>Contact Information: </label>
<div class="form-group border p-4 mb-5">
    <div class="form-row">
        <div class="form-group col">
            {{ form_label(form.strNameNr) }}
            {{ form_widget(form.strNameNr) }}
            {{ form_help(form.strNameNr) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            {{ form_label(form.city) }}
            {{ form_widget(form.city) }}
            {{ form_help(form.city) }}
        </div>
        <div class="form-group col">
            {{ form_label(form.zipcode) }}
            {{ form_widget(form.zipcode) }}
            {{ form_help(form.zipcode) }}
        </div>
        <div class="form-group col">
            {{ form_label(form.country) }}
            {{ form_widget(form.country) }}
            {{ form_help(form.country) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            {{ form_label(form.gmaploc) }}
            {{ form_widget(form.gmaploc) }}
            {{ form_help(form.gmaploc) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            {{ form_label(form.eMail) }}
            {{ form_widget(form.eMail) }}
            {{ form_help(form.eMail) }}
        </div>
        <div class="form-group col">
            {{ form_label(form.telNr) }}
            {{ form_widget(form.telNr) }}
            {{ form_help(form.telNr) }}
        </div>
        <div class="form-group col">
            {{ form_label(form.webpage) }}
            {{ form_widget(form.webpage) }}
            {{ form_help(form.webpage) }}
        </div>
    </div>
</div>

<div class="form-row">
    <div class="form-group col">
        {{ form_label(form.moto) }}
        {{ form_widget(form.moto, {'attr': {'rows': '5'}}) }}
        {{ form_help(form.moto) }}
    </div>
</div>
<div class="form-row">
    <div class="form-group col">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'rows': '15'}}) }}
        {{ form_help(form.description) }}
    </div>
</div>

<div>
    <button class="btn btn-outline-primary btn-block btn-lg col-md-4 my-3">{{ button_label|default('Save') }}</button>
</div>

{{ form_end(form) }}
