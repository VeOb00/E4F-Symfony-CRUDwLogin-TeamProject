{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="my-5">
        <h3 class="display-4">Post Index</h3>
        <h4 class="font-weight-light">Add, view and edit news articles, updates, strike information and company success
            stories.</h4>
    </div>

    <div class="row">
        <a class="btn btn-outline-primary mx-3" href="{{ path('post_new') }}">Create new</a>
        <a class="btn btn-outline-secondary mx-3" href="{{ path('admin') }}">Back to admin panel</a>
    </div>
    <br>
    <table class="table table-striped table-hover">
        <thead class="thead-light">
        <tr>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col">Id</th>
            <th scope="col">Type</th>
            <th scope="col">Title and Subtitle</th>
            <th scope="col">DatePublished</th>
            <th scope="col">Author</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <th scope="row">
                    <a class="btn btn-outline-secondary btn-sm btn-block"
                       href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a class="btn btn-outline-danger btn-sm btn-block" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </th>
                <td><img src="{{ post.imageMain }}" alt="none" class="" height="60"></td>
                <td>
                    <div>{{ post.id }}</div>
                </td>
                <td>
                    <div class="badge badge-secondary">{{ post.postType }}</div>
                </td>
                <td>{{ post.title }}<br><small>{{ post.subtitle }}</small></td>
                <td>{{ post.datePublished ? post.datePublished|date('Y-m-d') : '' }}</td>
                <td>{{ post.authorFn }} {{ post.authorLn }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <div class="row">
        <a class="btn btn-outline-primary mx-3" href="{{ path('post_new') }}">Create new</a>
        <a class="btn btn-outline-secondary mx-3" href="{{ path('admin') }}">Back to admin panel</a>
    </div>
{% endblock %}
