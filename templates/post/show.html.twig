{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ post.subtitle }}</td>
            </tr>
            <tr>
                <th>DatePublished</th>
                <td>{{ post.datePublished ? post.datePublished|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>AuthorFn</th>
                <td>{{ post.authorFn }}</td>
            </tr>
            <tr>
                <th>AuthorLn</th>
                <td>{{ post.authorLn }}</td>
            </tr>
            <tr>
                <th>ImageMain</th>
                <td>{{ post.imageMain }}</td>
            </tr>
            <tr>
                <th>ImageMiddle</th>
                <td>{{ post.imageMiddle }}</td>
            </tr>
            <tr>
                <th>ImageBottom</th>
                <td>{{ post.imageBottom }}</td>
            </tr>
            <tr>
                <th>Excerpt</th>
                <td>{{ post.excerpt }}</td>
            </tr>
            <tr>
                <th>IntroText</th>
                <td>{{ post.introText }}</td>
            </tr>
            <tr>
                <th>MainText</th>
                <td>{{ post.mainText }}</td>
            </tr>
            <tr>
                <th>OutroText</th>
                <td>{{ post.outroText }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
