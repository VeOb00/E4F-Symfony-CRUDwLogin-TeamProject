	<div class="container mt-4">
		<div class="d-flex row justify-content-between flex-wrap">
			{% for business in businesses %}
				<div class="card mb-3" style="max-width: 150em;">
					<div class="row no-gutters">
						<div class="col-md-5">
							<img src="{{ business.image }}" class="card-img img-fluid" alt="...">
						</div>
						<div class="col-md-7">
							<div class="card-body">
								<h5 class="card-title"> {{ business.name|upper }}</h5>
								<p><small class="text-muted">branch: </small>{{ business.branch }}</p>
								<p class="card-text">{{ business.description }}</p>

								<p class="card-text">
									<i class="fas fa-map-marker text-warning"></i>
									<small class="text-muted">
										{{ business.zipcode }}
										{{ business.city }}
										|
										{{ business.strNameNr }}</small>
								<br>
									<i class="fas fa-phone-alt text-warning"></i>
									<small class="text-muted">{{ business.telNr }}</small>
								<br>
								<a href="{{ path('members_show', {'id': business.id}) }}">
									<i class="fas fa-angle-double-right text-secondary fa-2x"></i>
								</a>

								<a href="#" class="card-link ml-4"></a>
							</p>

						</div>
					</div>
				</div>
			</div>
