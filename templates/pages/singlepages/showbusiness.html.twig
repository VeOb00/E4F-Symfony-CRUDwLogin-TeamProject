{% extends 'base.html.twig' %}

{% block title %}Members
{% endblock %}

{% block body %}


	<div class="container">
		<h1>{{ business.name }}</h1>

		{{ business.moto }}
		<div class="row row-cols-1 row-cols-md-2 mt-4">
			<div class="col mb-4">
				<div class="card shadow">
					<img src="{{ business.image }}" class="card-img-top" alt="image">
					<div class="card-body">
						<div class="embed-responsive embed-responsive-1by1">
							<iframe class="embed-responsive-item" src="{{ business.gmaploc }}" width="400" height="400" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
						</div>
					</div>
				</div>
			</div>
			<div class="col mb-4">
				<div class="card shadow">
					<div class="card-body">
                    
						<h5 class="card-title">contact:</h5>
						<p class="card-text">
                        <i class="fas fa-map-marker text-warning"></i> 
							{{ business.zipcode }}
							{{ business.city }}
							<br>
							{{ business.strNameNr }}
							<br> 
                            {% if business.telNr is not empty %}
                            <i class="fas fa-phone-alt text-warning"></i> 
							{{ business.telNr }}
							<br>
                            {% endif %}
                            {% if business.webpage is not empty %}
                            <i class="fas fa-globe-europe pr-1 text-warning"></i> 
							<a href="https://{{ business.webpage }}">company's website</a>
							<br>
                            {% endif %}
                            <i class="fas fa-at text-warning"></i>
                            {% if business.eMail is not empty %}
							{{ business.eMail }}
                            {% endif %}
						</p>
						<hr>
						<h5 class="card-title">facts:</h5>
						<p class="card-text">
							employees:
							{{ business.nrEmployees }}
							<br>
							branch:
							{{ business.branch }}
						</p>
						<hr>
						<h5 class="card-title">description:</h5>
						<p class="card-text">{{ business.description }}</p>
						<hr>
						<p class="card-text d-flex justify-content-center">
						<img class="w-25" src="{{ business.logo }}">
						</p>
					</div>
				</div>
			</div>
		</div>
		<button type="button" class="btn btn-secondary shadow">
			<a class="text-white" href="{{ path('members') }}">back to list</a>
		</button>
	</div>

{% endblock %}
