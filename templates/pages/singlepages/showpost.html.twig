{% extends 'base.html.twig' %}
{% block title %}Post
{% endblock %}
{# {% block pagetitle %}{{ post.title }}{% endblock %} #}
{% block pagesubtitle %}{% endblock %}
{% block body %}
    <div class="container">
    <h1 class="mt-4">{{ post.title }}</h1>
    <h4 class="mt-2 text-secondary">{{ post.subtitle }}</h4>
    <small class="text-muted mb-2">recorded by/on:
        {% if post.authorLn is not empty %}
            {{ post.authorLn }}
            |
        {% endif %}
        {{ post.datePublished ? post.datePublished|date('Y-m-d') : '' }}</small>
    {% if post.postType() == 'strike' %}
    <div class="row no-gutter mb-3">
    <div class="col-md-12 col-lg-8 px-3 py-1">
        <div class="bg-light m-0 mb-4">
            <div class="container">
                <div class="row">
{#                    <div class="col my-4">#}
{#                        <h1>{{ post.title }}</h1>#}
{#                        <br>#}
{#                        <h3>{{ post.subtitle }}</h3>#}
{#                    </div>#}
                </div>
                    <div class="row no-gutter mb-3">
                        <div class="col-md-12 col-lg-8 px-3 py-1">
                            <div class="mt-3">
                                <h2 class="text-info">
                                    <i class="fas fa-angle-double-right"></i>
                                    save the date!
                                    <i class="fas fa-angle-double-left"></i>
                                </h2>
                                <i class="fas fa-calendar-day mr-2 text-info"></i>
                                {{ post.strikeDate ? post.strikeDate|date('Y-m-d') : ''  }}</div>
                            <div class="mb-1">
                                <i class="fas fa-map-marker mr-2 text-info"></i>
                                {{ post.strikeAddress }}
                                |{{ post.strikeZipcode }}
                                {{ post.strikeCity }}
                                {{ post.strikeCountry }}</div>
                        </div>
                        <div class="col-md-0 col-lg-4"></div>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="d-flex justify-content-center my-2">
            <i class="fab fa-facebook-square text-info mr-1 fa-2x" title="share on facebook"></i>
            <i class="fab fa-twitter-square text-info  mr-1 fa-2x" title="share on twitter"></i>
            <i class="fab fa-linkedin text-info  mr-1 fa-2x" title="share on linkedIn"></i>
            <i class="fas fa-share-square text-info  mr-1 fa-2x" title="share"></i>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <img class="" style="width: 40vw;" src="{{ post.imageMain }}" alt="">
                </div>
                <div class="col">
                    <p>{{ post.introText }}</p>
                </div>
            </div>
            <br>
            <br>
            <div class="row">
                {% if post.imageMiddle is empty %}
                    <div class="col">
                        <p>{{ post.mainText }}</p>
                    </div>
                {% else %}
                    <div class="col">
                        <p>{{ post.mainText }}</p>
                    </div>
                    <div class="col">
                        <img class="" style="width: 40vw;" src="{{ post.imageMiddle }}" alt="">
                    </div>
                {% endif %}
            </div>
            <br>
            <br>
            <div class="row">
                {% if post.imageBottom is empty %}
                <div class="col">
                    <p>{{ post.mainText }}</p>
                </div>
                {% else %}
                <div class="col">
                    <img class="" style="width: 40vw;" src="{{ post.imageBottom }}" alt="">
                </div>
                <div class="col">
                    <p>{{ post.outroText }}</p>
                </div>
            </div>
            {% endif %}
        </div>
        <a href="/posts/news">back to list</a>
        <button type="button" class="btn btn-info shadow">
            <a class="text-white" href="{{ path('news') }}">back</a>
        </button>
    </div>
{% endblock %}