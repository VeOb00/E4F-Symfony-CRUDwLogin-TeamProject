{% extends 'base.html.twig' %}

{% block title %}Cause Show{% endblock %}

{% block body %}
    <br>
    <h1>Cause show single page</h1>
    <br>
    <div class="row">
        <div class="col-8"> 
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ cause.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ cause.title }}</td>
                </tr>
                <tr>
                    <th>Subtitle</th>
                    <td>{{ cause.subtitle }}</td>
                </tr>
                <tr>
                    <th>Excerpt</th>
                    <td>{{ cause.excerpt }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ cause.image }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ cause.description }}</td>
                </tr>
                <tr>
                    <th>DateStart</th>
                    <td>{{ cause.dateStart ? cause.dateStart|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>DateEnd</th>
                    <td>{{ cause.dateEnd ? cause.dateEnd|date('Y-m-d') : '' }}</td>
                </tr>
                </tbody>
            </table>
            <div>
                <h3>Signatures collected</h3>
                <table class="table">
                    <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>City</th>
                        <th>Country</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for signatory in signatories %}
                        <tr>
                            <td>{{ signatory.fName }}</td>
                            <td>{{ signatory.lName }}</td>
                            <td>{{ signatory.city }}</td>
                            <td>{{ signatory.country }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="13">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card col-3"> 
            <h3>Sign here!</h3>
            {{ include('signatory/_form.html.twig') }}
        </div>
    </div>

    
    <a href="{{ path('sign') }}">back to list</a>


{% endblock %}
